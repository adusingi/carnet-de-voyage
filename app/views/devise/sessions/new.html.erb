<div class="min-h-screen bg-white">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "logo.svg", alt: "Carnet de Voyage", class: "h-8 w-8" %>
          <span class="text-xl font-semibold text-gray-900">Carnet de Voyage</span>
        <% end %>

        <div class="flex items-center gap-6">
          <%= link_to "Pricing", root_path(anchor: "pricing"), class: "text-gray-600 hover:text-gray-900 transition-colors font-medium" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "bg-sky-500 text-white px-4 py-2 rounded-lg hover:bg-sky-600 transition-colors font-medium" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Sign In Form Section -->
  <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Welcome back</h1>
        <p class="text-gray-600">Log in to continue your journey</p>
      </div>

      <!-- Sign In Form Card -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent transition-colors text-gray-900 placeholder-gray-400",
                placeholder: "your@email.com" %>
          </div>

          <!-- Password Field -->
          <div>
            <div class="flex items-center justify-between mb-2">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <% if devise_mapping.recoverable? %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-sky-500 hover:text-sky-600 font-medium" %>
              <% end %>
            </div>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent transition-colors text-gray-900 placeholder-gray-400",
                placeholder: "Enter your password" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-sky-500 border-gray-300 rounded focus:ring-sky-500" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div>
            <%= f.submit "Log In", class: "w-full bg-sky-500 text-white px-6 py-3 rounded-lg text-base font-medium hover:bg-sky-600 transition-colors shadow-lg hover:shadow-xl cursor-pointer" %>
          </div>
        <% end %>

        <!-- Sign Up Link -->
        <% if devise_mapping.registerable? %>
          <div class="mt-6 pt-6 border-t border-gray-200 text-center">
            <p class="text-gray-600">
              Don't have an account?
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sky-500 hover:text-sky-600 font-medium" %>
            </p>
          </div>
        <% end %>
      </div>

      <!-- Additional Help Links -->
      <div class="mt-6 text-center text-sm text-gray-500 space-y-2">
        <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <div>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "hover:text-gray-700" %>
          </div>
        <% end %>

        <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <div>
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "hover:text-gray-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
