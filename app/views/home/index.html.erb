            <div class="absolute inset-0 flex items-center justify-center p-8">
              <!-- Tokyo Map representation with gradient -->
              <div class="w-full h-full rounded-lg relative"
                   style="background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 25%, #7dd3fc 50%, #38bdf8 75%, #0ea5e9 100%);"
                   data-map-animation-target="map">

                <!-- Map Pins for Tokyo locations -->
                <div class="absolute inset-0">
                  <!-- Tokyo Tower -->
                  <div data-map-animation-target="pin"
                       data-place="tokyo-tower"
                       class="absolute w-10 h-10 -translate-x-1/2 -translate-y-full opacity-0 transition-all duration-500"
                       style="left: 35%; top: 45%;">
                    <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-primary drop-shadow-lg">
                      <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                    <div class="absolute top-10 left-1/2 -translate-x-1/2 whitespace-nowrap bg-white px-2 py-1 rounded shadow-lg text-xs font-semibold">
                      Tokyo Tower
                    </div>
                  </div>

                  <!-- Sukiyabashi Jiro -->
                  <div data-map-animation-target="pin"
                       data-place="sukiyabashi-jiro"
                       class="absolute w-10 h-10 -translate-x-1/2 -translate-y-full opacity-0 transition-all duration-500"
                       style="left: 50%; top: 40%;">
                    <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-primary drop-shadow-lg">
                      <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                    <div class="absolute top-10 left-1/2 -translate-x-1/2 whitespace-nowrap bg-white px-2 py-1 rounded shadow-lg text-xs font-semibold">
                      Sukiyabashi Jiro
                    </div>
                  </div>

                  <!-- Shibuya Crossing -->
                  <div data-map-animation-target="pin"
                       data-place="shibuya-crossing"
                       class="absolute w-10 h-10 -translate-x-1/2 -translate-y-full opacity-0 transition-all duration-500"
                       style="left: 45%; top: 60%;">
                    <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-primary drop-shadow-lg">
