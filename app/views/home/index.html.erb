<div class="max-w-4xl mx-auto px-4 py-8">
  <% if user_signed_in? %>
    <div class="bg-white rounded-lg shadow p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Welcome, <%= current_user.username %>!</h1>
      <p class="text-gray-600 mb-6">You're successfully signed in to Carnet de Voyage.</p>

      <div class="space-y-3">
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">Account type:</span>
          <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
            <%= current_user.role.capitalize %>
          </span>
        </div>

        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">Maps created:</span>
          <span class="text-gray-900 font-medium"><%= current_user.maps.count %> / <%= current_user.maps_limit %></span>
        </div>
      </div>

      <div class="mt-6 flex gap-3">
        <%= link_to "My Maps", maps_path,
            class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition inline-block" %>
        <%= link_to "Edit Profile", edit_user_registration_path,
            class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition inline-block" %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete,
            class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Welcome to Carnet de Voyage</h1>
      <p class="text-gray-600 mb-6">Create and share your travel maps with the world.</p>

      <div class="flex gap-3 justify-center">
        <%= link_to "Explore Maps", maps_path,
            class: "px-6 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition inline-block" %>
        <%= link_to "Sign In", new_user_session_path,
            class: "px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition inline-block" %>
        <%= link_to "Sign Up", new_user_registration_path,
            class: "px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition inline-block" %>
      </div>
    </div>
  <% end %>
</div>
