<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <h1 class="text-4xl font-bold text-gray-900">Carnet de Voyage</h1>
      <p class="text-gray-600 mt-1">Transform your travel notes into interactive maps</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex main-content" style="height: calc(100vh - 120px);">
    <!-- Left Sidebar - Trip Notes -->
    <div class="w-[40%] flex-shrink-0 left-sidebar border-r border-gray-200 overflow-y-auto bg-gray-50">
      <div class="p-6">
        <!-- Destination -->
        <% if @map.title.present? %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center gap-2">
              <span class="text-blue-600">üìç</span>
              <span class="font-medium text-gray-900">Destination: <%= @map.title %></span>
            </div>
          </div>
        <% end %>

        <!-- Your Trip Notes -->
        <div>
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">Your Trip Notes</h2>
          <% if @map.original_text.present? %>
            <div class="text-gray-800 leading-relaxed">
              <%= highlight_place_names(simple_format(@map.original_text), @map.places) %>
            </div>
          <% else %>
            <p class="text-gray-500">No trip notes available.</p>
          <% end %>
        </div>

        <!-- Share Options (compact) -->
        <% if @map.places.any? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm font-medium text-gray-700 mb-2">Share this map:</p>
            <div class="flex flex-wrap gap-2">
              <button onclick="copyToClipboard('<%= map_url(@map) %>')" class="text-xs px-3 py-1.5 bg-white border border-gray-300 rounded hover:bg-gray-50 transition">
                Copy Link
              </button>
              <% if @map.google_maps_url.present? %>
                <%= link_to "Google Maps", @map.google_maps_url, target: "_blank", class: "text-xs px-3 py-1.5 bg-white border border-gray-300 rounded hover:bg-gray-50 transition" %>
              <% end %>
              <%= link_to "PDF", map_path(@map, format: :pdf), class: "text-xs px-3 py-1.5 bg-white border border-gray-300 rounded hover:bg-gray-50 transition" %>
            </div>
            <p class="text-xs text-gray-500 mt-2" id="copy-feedback"></p>
          </div>
        <% end %>

        <!-- Edit/Delete buttons for owner -->
        <% if user_signed_in? && @map.creator == current_user %>
          <div class="mt-6 pt-6 border-t border-gray-200 flex gap-2">
            <%= link_to "Edit", edit_map_path(@map), class: "text-sm px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
            <%= button_to "Delete", @map, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
          </div>
        <% end %>

        <!-- Back link -->
        <div class="mt-6">
          <%= link_to "‚Üê Back to Maps", maps_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>

    <!-- Right Side - Map -->
    <div class="relative right-map w-[60%] h-full">
      <div id="map" class="w-full h-full" data-controller="map" data-map-places-value="<%= @map.places.to_json(only: [:id, :name, :latitude, :longitude, :address, :place_type, :context]) %>"></div>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      const feedback = document.getElementById('copy-feedback');
      feedback.textContent = '‚úì Link copied!';
      feedback.classList.add('text-green-600');
      setTimeout(() => {
        feedback.textContent = '';
        feedback.classList.remove('text-green-600');
      }, 3000);
    }, function(err) {
      const feedback = document.getElementById('copy-feedback');
      feedback.textContent = '‚úó Failed to copy';
      feedback.classList.add('text-red-600');
    });
  }
</script>
