<div style="display: flex; height: 100vh; overflow: hidden;">
  <!-- LEFT SIDE: 40% width -->
  <div style="width: 40%; display: flex; flex-direction: column; background-color: white; padding: 24px;">

    <!-- HEADER (fixed) -->
    <header class="mb-6 flex-shrink-0" style="display: flex; justify-content: space-between; align-items: flex-start;">
      <div>
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Carnet de Voyage</h1>
        <p class="text-sm text-gray-500">Transform your travel notes into interactive maps</p>
      </div>
      <div style="display: flex; gap: 8px;">
        <%= link_to "‚Üê Back to Maps", maps_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
        <% if user_signed_in? && @map.creator == current_user %>
          <%= link_to "Edit", edit_map_path(@map), class: "text-sm px-4 py-2 bg-gray-200 text-gray-800 hover:bg-gray-300 transition" %>
          <%= button_to "Delete", @map, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm px-4 py-2 bg-red-600 text-white hover:bg-red-700 transition" %>
        <% end %>
      </div>
    </header>

    <!-- Destination -->
    <% if @map.title.present? %>
      <div class="flex-shrink-0" style="background-color: #eff6ff; border: 1px solid #bfdbfe; border-radius: 0.125rem; padding: 12px; margin-bottom: 16px;"><p style="font-size: 0.875rem; color: #1e40af; margin: 0;"><span style="font-weight: 600;">üìç Destination:</span> <%= @map.title %></p></div>
    <% end %>

    <!-- Trip Notes Display -->
    <div style="flex: 1; display: flex; flex-direction: column; min-height: 0; overflow: hidden;">
      <!-- Map Title -->
      <% if @map.title.present? %>
        <h2 class="flex-shrink-0" style="padding: 16px; margin-bottom: 12px; margin-top: 0; border: 1px solid #d1d5db; border-radius: 0.125rem; font-size: 18px; font-weight: 600; color: #374151; background-color: #ffffff; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;">
          <%= @map.title %>
        </h2>
      <% end %>

      <% if @map.original_text.present? %>
        <div data-notes-display class="text-gray-800 leading-relaxed" style="flex: 1; border: 1px solid #d1d5db; border-radius: 0.125rem; padding: 16px; overflow-y: auto; background-color: #ffffff; font-size: 15px; line-height: 1.6; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;">
          <%= highlight_place_names(simple_format(@map.original_text), @map.places) %>
        </div>
      <% else %>
        <div class="text-gray-500" style="flex: 1; border: 1px solid #d1d5db; border-radius: 0.125rem; padding: 16px; overflow-y: auto; background-color: #f9fafb;">
          <p>No trip notes available. Click "Edit" to add your travel notes.</p>
        </div>
      <% end %>
    </div>

    <!-- Footer Space (5vh) -->
    <div style="height: 5vh; flex-shrink: 0;"></div>
  </div>

  <!-- RIGHT SIDE: 60% width -->
  <div style="width: 60%; position: relative; overflow: hidden;">
    <div id="map" style="width: 100%; height: 100vh;" data-controller="map" data-map-places-value="<%= @map.places.to_json(only: [:id, :name, :latitude, :longitude, :address, :place_type, :context]) %>"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Check if coming from an update (Turbo stores referrer)
    const notesDisplay = document.querySelector('[data-notes-display]');

    if (notesDisplay && document.referrer.includes('/edit')) {
      // Add green border
      notesDisplay.style.border = '2px solid #10b981'; // green-500
      notesDisplay.style.transition = 'border 0.3s ease-in-out';

      // Remove after 3 seconds
      setTimeout(function() {
        notesDisplay.style.border = '1px solid #d1d5db';
      }, 3000);
    }
  });
</script>
