<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="border-b border-gray-200">
    <div class="max-w-5xl mx-auto px-6 py-6">
      <h1 class="text-4xl font-bold text-gray-900">Carnet de Voyage</h1>
      <p class="text-gray-600 mt-1">Transform your travel notes into interactive maps</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-5xl mx-auto px-6 py-12">
    <%= form_with model: @map, class: "space-y-8" do |form| %>
      <% if @map.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4">
          <p class="font-medium text-red-800"><%= pluralize(@map.errors.count, "error") %> prevented this map from being saved:</p>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @map.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Destination -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex items-start gap-2">
          <span class="text-blue-600 mt-1">ğŸ“</span>
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-2">Destination</label>
            <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500", placeholder: "New York City, USA" %>
          </div>
        </div>
      </div>

      <!-- Trip Notes -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Your Trip Notes</h2>
        <%= form.text_area :original_text, rows: 16, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-gray-800 leading-relaxed", placeholder: "New York City\nGive me 5 great cocktail bars\nFive Great Cocktail Bars to Try on Your Next Night Out:\n1. The Up & Up is a low-key, high-end cocktail bar in the West Village...\n2. The Raines Law Room at The William (Lounge)...\n3. The Rum House...\n4. Mother's Ruin..." %>
        <p class="text-sm text-gray-500 mt-2">Paste your trip notes or itinerary. We'll extract places and add them to your map automatically.</p>
      </div>

      <!-- Hidden fields for description and privacy -->
      <%= form.hidden_field :description %>
      <%= form.hidden_field :privacy, value: 'shared_with_link' %>

      <!-- Submit Button -->
      <div class="flex gap-3">
        <%= form.submit "Generate Map", class: "px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium cursor-pointer" %>
        <%= link_to "Cancel", maps_path, class: "px-8 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" %>
      </div>
    <% end %>
  </div>

</div>
