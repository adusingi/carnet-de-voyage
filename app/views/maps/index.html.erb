<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-6 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-4xl font-bold text-gray-900">Carnet de Voyage</h1>
          <p class="text-gray-600 mt-1">Transform your travel notes into interactive maps</p>
        </div>
        <% if user_signed_in? %>
          <%= link_to "Create New Map", new_map_path, class: "px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-6 py-12">
    <% if @maps.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @maps.each do |map| %>
          <%= link_to map, class: "block bg-white border border-gray-200 rounded-lg hover:shadow-md transition p-6" do %>
            <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= map.title %></h2>

            <% if map.description.present? %>
              <p class="text-sm text-gray-600 mb-3 line-clamp-2"><%= map.description %></p>
            <% end %>

            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-500"><%= pluralize(map.places_count, 'place') %></span>
              <span class="text-xs text-gray-400"><%= time_ago_in_words(map.created_at) %> ago</span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="text-xl font-medium text-gray-900 mb-2">No maps yet</h3>
        <p class="text-gray-600 mb-6">
          <%= user_signed_in? ? "Create your first travel map to get started" : "Sign in to create your first travel map" %>
        </p>
        <% if user_signed_in? %>
          <%= link_to "Create Your First Map", new_map_path, class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition inline-block font-medium" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition inline-block font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="border-t border-gray-200 mt-16">
    <div class="max-w-6xl mx-auto px-6 py-6">
      <p class="text-sm text-gray-500 text-center">Powered by OpenAI GPT-4 & Mapbox</p>
    </div>
  </div>
</div>
